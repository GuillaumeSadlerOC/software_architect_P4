# ===================================================================
# CONFIGURATION MODEL - DATASHARE
# Copy this file to '.env' and adjust the secrets for local use.
# ===================================================================

# -------------------------------------------------
# GLOBAL & NETWORK
# -------------------------------------------------
PROJECT_NAME=datashare                  # Unique project name
DOMAIN_FRONT=datashare.localhost        # Frontend domain
DOMAIN_API=api.datashare.localhost      # Backend (API) domain

# -------------------------------------------------
# POSTGRESQL
# -------------------------------------------------
POSTGRES_USER=admin                             # Database superuser
POSTGRES_PASSWORD=change_me_in_local            # [SECRET] Database password
POSTGRES_DB=datashare_db                        # Database name
POSTGRES_HOST=postgresql                        # Docker service name (internal network)
POSTGRES_PORT=5432                              # Standard PostgreSQL port

# -------------------------------------------------
# REDIS
# -------------------------------------------------
REDIS_HOST=datashare-redis                      # Hostname (container name or service)
REDIS_PORT=6379
REDIS_PASSWORD=change_me_alphanumeric_only      # [SECRET] Redis password
# Connection string constructed from variables abovE
REDIS_CACHE_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# -------------------------------------------------
# BACKEND (NestJS)
# -------------------------------------------------
JWT_SECRET=replace_with_secure_random_string    # [SECRET] Key for signing JWT tokens
PORT=3000                                       # Internal port for NestJS

# -------------------------------------------------
# FRONTEND (Next.js)
# -------------------------------------------------
NODE_ENV=development
# URL used by Next.js server-side to reach NestJS (Docker internal network)
INTERNAL_API_URL=http://backend:3000/api
# URL used by the browser to reach the API (Public via Traefik)
NEXT_PUBLIC_API_URL=http://api.datashare.localhost/api
# Public URL of the frontend application
NEXT_PUBLIC_APP_URL=http://datashare.localhost
# Allowed domains for next/image optimization
ALLOWED_IMAGE_DOMAINS=api.datashare.localhost,datashare.localhost
